<div class="row">
  <div class="col-md-offset-3 col-md-6 text-center">
    <div class="page-header">
      <h1>Twitter Reponses</h1>
    </div>
  </div>
</div>
<% @tweets.each_with_index do |tweet, index| %>
<div class="row tweet_<%= index %>">
  <div class="col-md-offset-3 col-md-6">
    <p>
      <strong>Posted by</strong> <%= link_to "@#{tweet.screen_name}", tweet.user_profile_link %> <strong><%= link_to "#{time_ago_in_words(tweet.created_at)} ago", tweet.url  %></strong>
    </p>
    <p><%= tweet.text %></p>
    <dl class="dl-horizontal">
      <dt>Number of Followers:</dt>
      <dd><%= tweet.followers_count %></dd>
      <dt>Number of Retweets:</dt>
      <dd><%= tweet.retweet_count %></dd>
      <dt>Number of Favorites:</dt>
      <dd><%= tweet.favorite_count %></dd>
    </dl>
  </div>
</div>
<% end %>
